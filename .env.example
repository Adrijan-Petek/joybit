# ============================================================
# JOYBIT - Environment Configuration
# ============================================================
# Copy this file to .env.local for frontend
# Copy this file to .env for Hardhat deployment
# NEVER commit real values to git!
# ============================================================

# ============================================================
# DEPLOYMENT CONFIGURATION (Hardhat Only)
# ============================================================

# Private key for contract deployment (without 0x prefix)
# Get testnet ETH from: https://www.coinbase.com/faucets/base-ethereum-goerli-faucet
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# BaseScan API Key for contract verification (optional)
# Get from: https://basescan.org/apis
BASESCAN_API_KEY=your_basescan_api_key_here

# ============================================================
# NETWORK CONFIGURATION
# ============================================================

# Base Mainnet (Chain ID: 8453)
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet (Chain ID: 84532) - For testing only
# NEXT_PUBLIC_CHAIN_ID=84532
# NEXT_PUBLIC_BASE_TESTNET_RPC_URL=https://sepolia.base.org

# ============================================================
# WALLETCONNECT CONFIGURATION (Required)
# ============================================================

# Get your project ID from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ============================================================
# CONTRACT ADDRESSES (Update after deployment)
# ============================================================
# After running: npx hardhat run scripts/deploy.js --network base
# Copy addresses from deployment output

NEXT_PUBLIC_JOYBIT_TOKEN_ADDRESS=0xc732932ca7db558cf1bacc17b4f4f7e149e0eb07
NEXT_PUBLIC_TREASURY_ADDRESS=
NEXT_PUBLIC_MATCH3_GAME_ADDRESS=
NEXT_PUBLIC_CARD_GAME_ADDRESS=
NEXT_PUBLIC_DAILY_CLAIM_ADDRESS=
NEXT_PUBLIC_CARD_GAME_ADDRESS=
NEXT_PUBLIC_DAILY_CLAIM_ADDRESS=
NEXT_PUBLIC_TREASURY_ADDRESS=

# ============================================================
# ADMIN CONFIGURATION
# ============================================================

# Admin wallet address (must match deployer for full access)
NEXT_PUBLIC_ADMIN_WALLET_ADDRESS=0xYourAdminWalletAddress

# ============================================================
# OPTIONAL CONFIGURATIONS
# ============================================================

# OnchainKit (Base utilities - optional)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=

# Alchemy RPC (alternative to public RPC - optional)
NEXT_PUBLIC_ALCHEMY_API_KEY=

# Environment flag
NEXT_PUBLIC_ENVIRONMENT=development
